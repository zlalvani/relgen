{
  "llm": {
    "provider": "deepseek",
    "model": "deepseek-chat",
    "apiKey": "your-deepseek-api-key-here"
  },
  "integrations": {
    "github": {
      "token": "your-github-token-here"
    },
    "linear": {
      "token": "your-linear-token-here"
    }
  },
  "commands": {
    "remote": {
      "pr": {
        "review": {
          "ruleEvalMode": "separate",
          "rules": [
            { "file": "apps/relgen/examples/rules/injectable.md" },
            { "file": "apps/relgen/examples/rules/typos.md" }
          ]
        }
      }
    }
  }
}
